<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- This is the theme for your Login/Signup screens in Dark Mode. -->
    <style name="Theme.LonyiChat.AppCompat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Make the status bar and navigation bar transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- This new line disables the contrast protection on the navigation bar -->
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
    </style>

</resources>